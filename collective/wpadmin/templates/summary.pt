<div class="row-fluid" i18n:domain="collective.wpadmin">
  <div class="span3 summary-content">
    <h3>Content</h3>
    <p><a tal:attributes="href string:${view/context/absolute_url}/wp-admin-edit"><span class="badge badge-success"><tal:nb tal:content="view/how_many_published_post"></tal:nb>&nbsp;<tal:label i18n:translate="">Published post</tal:label></span></a></p>
    <p><span class="badge badge-info"><tal:nb tal:content="view/how_many_tags"></tal:nb>&nbsp<tal:label i18n:translate="">Tags</tal:label></span></p>
  </div>
  <div class="span3" class="summary-discussion">
    <h3>Discussion</h3>
      <p><span class="badge badge-info"><tal:nb tal:content="view/how_many_comments"></tal:nb>&nbsp;<tal:label i18n:translate="">Comments</tal:label></span></p>
      <p><span class="badge badge-success"><tal:nb tal:content="view/how_many_published_comments"></tal:nb>&nbsp;<tal:label i18n:translate="">Approved</tal:label></span></p>
      <p><span class="badge badge-warning"><tal:nb tal:content="view/how_many_pending_comments"></tal:nb>&nbsp;<tal:label i18n:translate="">Pending</tal:label></span></p>
  </div>
</div>
