<div class="span12">
<table class="datatable">
    <thead>
        <tr>
            <th>title</th>
            <th>author</th>
            <th>tags</th>
            <th>categories</th>
            <th>actions</th>
        </tr>
    </thead>
    <tbody>
        <tr tal:repeat="post view/get_all_posts">
          <td><a tal:attributes="href string:${post/getURL}" tal:content="post/Title"></a></td>
          <td tal:content="post/Creator"></td>
          <td tal:content="python:', '.join(post.Subject)"></td>
          <td></td>
          <td>
            <a class="btn" tal:attributes="href string:${post/getURL}/wp-admin-base-edit" data-target="#ploneModal" data-toggle="modal">edit</a>
            <a class="btn" tal:attributes="href string:${post/getURL}/wp-admin-rename" data-target="#ploneModal" data-toggle="modal">rename</a>
            <a class="btn btn-danger" tal:attributes="href string:${post/getURL}/wp-admin-delete_confirmation" data-target="#ploneModal" data-toggle="modal">delete</a>
          </td>
        </tr>
     </tbody>
</table>
</div>
<script type="text/javascript" tal:attributes="src string:${view/site_url}/++resource++wp-admin-edit.js"></script>
