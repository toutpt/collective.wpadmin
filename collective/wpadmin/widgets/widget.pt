<div tal:attributes="class string:wpwidget wpwidget-${view/name}">
  <h3><span tal:replace="view/title"></span></h3>
  <div>
    <p class="wpwidget-description" tal:condition="view/description" tal:content="view/description"></p>
    <div tal:attributes="class string:wpwidget-content wpwidget-content-${view/name}" tal:content="structure view/content">
  </div>
</div>
</div>